%h5 Details
%ul
  %li.infolabel
    %span
      Artist:
    = link_to_artist(card.artist) do
      = card.artist.name
  - if card.reserved
    %li.infolabel
      = "#{card.name} is on Reserved List."
  - if card.watermark
    %li.infolabel
      = "Watermark: #{card.watermark.capitalize}"
  %li.infolabel
    = "Released: #{card.release_date.inspect}"
%h5 Legalities
%ul.legalities
  - legality = card.legality_information
  - if legality.legal_everywhere?
    %li
      #{card.name} is legal in every format.
  - elsif legality.legal_nowhere?
    %li
      #{card.name} is not legal in any format.
  - else
    - card.legality_information.to_h.sort.each do |format, status|
      %li
        = format
        &mdash;
        = status

- if card.foreign_names
  %h5 Foreign names
  %ul.foreign_names
    - card.foreign_names.sort.each do |language_code, foreign_names|
      - foreign_names.each do |foreign_name|
        %li
          = foreign_name
          &mdash;
          %i.language_name= language_name(language_code)

- if card.rulings.present?
  %h5 Rulings
  %ul.rulings
    - card.rulings.each do |ruling|
      %li
        = ruling["date"]
        = format_oracle_text(ruling["text"])

%h5 Links
%ul
  %li.infolabel
    = link_to "Gallery of all printings", card_gallery_path(card)
  - if card.gatherer_link.present?
    %li.infolabel
      %a{href: card.gatherer_link}
        Gatherer
